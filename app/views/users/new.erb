<%= erb :'partials/_navbar', layout: false%>

<div class="row">
<div class="container">
  <form class="" action="/users/new" method="post">
  <h2>Sign Up</h2>


    <div class="form-group">
        <label for="user[username]">Username</label>
        <input type="text" class="form-control" name="user[username]" value="">
    </div>

    <div class="form-group">
        <label for="user[email]">Email</label>
        <input type="text" class="form-control" name="user[email]" value="">
    </div>


    <div class="form-group">
      <label for="user[password]">Password:</label>
      <input type="password" class="form-control" name="user[password]" value="">
    </div>

    <div class="form-group">
      <label for="user[password_confirmation]">Confirm Password:</label>
      <input type="password" class="form-control" name="user[password_confirmation]" value="">
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" name="" value="Sign Up">
    </div>

  </form>
</div>
</div>
