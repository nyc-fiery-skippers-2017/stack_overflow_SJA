<%= erb :'partials/_navbar', layout: false%>
<div class="row">
  <div class="container homepage-container">
    <div class="col s8 offset-s2">
      <h5 class="text-left">Top Questions</h5>
      <hr>
    </div>

    <% @questions.each do |question| %>
      <div class="col s8 offset-s2 question-container">
          <div class="card-content">
            <div class="card-vote-count col s2">  <%= question.votes.count() %> <br> Views   </div>
            <div class="card-answer-count col s2">  <%= question.answers.count() %> <br> Answers   </div>
            <div class="card-title col s8"> <a href="/questions/<%= question.id %>" class=""> Question title: <%= question.title %> </a>
              <!-- <p class="card-body"> Question body:   <%= question.body %> </p> -->
              <p class="card-modify-time"> Modified at :   <%= question.updated_at %> |  By User: <%= User.find_by(id: question.user_id).username %> </p>
            </div>
          </div>
      </div>
      <% end %>
<%if current_user%>
<div class="col s8 offset-s2">
      <form class="add-question-form" action="/" method="post">
        <label for="title">Title</label>
        <input type="text" name="question[title]" value="">
        <textarea name="question[body]" rows="8" cols="80"></textarea>
        <input type="submit" name="" value="Ask Question">
      </form>
</div>
<%end%>


    </div>
</div>
